{
  "name": "cionru",
  "description": "A React component library built with EmotionJS",
  "author": "Joeylene Rivera",
  "version": "0.2.2",
  "license": "MIT",
  "repository": "jorenrui/cionru",
  "main": "index.js",
  "module": "cionru.esm.js",
  "typings": "index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "prepublishOnly": "echo \"Error: Don't run 'npm publish' in root. Use 'npm run dist' instead.\" && exit 1",
    "predist": "cp -rf package.json README.md LICENSE CHANGELOG.md dist",
    "distbeta": "cd dist && npm publish --ignore-scripts --tag beta",
    "dist": "cd dist && npm publish --ignore-scripts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "peerDependencies": {
    "react": ">=16",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "emotion-theming": "^10.0.27",
    "husky": "^4.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tsdx": "^0.14.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  }
}
